{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "paths": {
      "@subql/common-solana": [
        "packages/common-solana/src"
      ],
      "@subql/common-solana/*": [
        "packages/common-solana/src/*"
      ],
      "@subql/types-solana": [
        "packages/types/src"
      ],
      "@subql/types-solana/*": [
        "packages/types/src/*"
      ]
    },
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "packages/common-solana"
    },
    {
      "path": "packages/node"
    },
    {
      "path": "packages/types"
    }
  ],
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "**/node_modules/**"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}
